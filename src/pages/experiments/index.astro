---
import MainHead from '../../components/MainHead.astro';
import MainBody from '../../components/MainBody.astro';
import ParticleAnimation from '../../components/particle-animation.jsx';
---
<html lang="en">
  <MainHead title="Experiments" description="Interactions, widgets and other things I have been tinkering with" />
  <MainBody>
    <section class='wipe max-w-[960px] mx-auto py-24'>
      <h1 class='text-4xl mb-4'>Experiments</h1>
      <h4 class='font-serif italic text-2xl max-w-[820px]'>Interactions, widgets and other things I have been tinkering with.</h4>
    </section>
    <section class='fade-in max-w-[960px] mx-auto py-12'>
      <main>
        <article class='w-full mb-12 p-8 rounded-xl bg-blue' >
          <ParticleAnimation client:load />
        </article>
      </main>
    </section>
  </MainBody>
</html>
