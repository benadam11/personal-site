---
import MainHead from '../../components/MainHead.astro';
import MainBody from '../../components/MainBody.astro';
import PostItem from '../../components/post-item.jsx'
import { sortDate } from '../../scripts/utils.js';
const posts = Astro.fetchContent('../projects/*.md');
---
<html lang="en">
  <head>
    <MainHead title="Work" description="Essays, learning, and other miscellaneous goodies" />
  </head>
  <MainBody>
    <section class='wipe py-24'>
      <h1 class='text-4xl mb-4 font-bold'>Work</h1>
      <h4 class='font-serif italic text-2xl max-w-[820px]'>Essays, learning, and other miscellaneous goodies.</h4>
    </section>
    <section class='fade-in lg:-mx-60 py-12'>
      <ul class='grid grid-cols-3 gap-4'>
        {posts.sort(sortDate).map(post => <li class='bg-[rgba(0,0,0,.2)] aspect-square'></li>)}
      </ul>
    </section>
  </MainBody>
</html>