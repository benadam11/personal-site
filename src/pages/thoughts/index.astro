---
import MainHead from '../../components/MainHead.astro';
import MainBody from '../../components/MainBody.astro';
const posts = Astro.fetchContent('./*.md');
---
<html lang="en">
  <head>
    <MainHead title="Thoughts" description="Essays, learning, and other miscellaneous goodies" />
  </head>
  <MainBody>
    <section class='wipe max-w-[960px] mx-auto py-24'>
      <h1 class='text-4xl mb-4'>Thoughts</h1>
      <h4 class='font-serif italic text-2xl max-w-[820px]'>Essays, learning, and other miscellaneous goodies.</h4>
    </section>
    <section class='fade-in max-w-[960px] mx-auto py-12'>
      <ul>
        {posts.map(post => 
          <li class='block mb-8'>
            <h6 class='font-serif font-semibold text-grey2 text-sm mb-2'>12/10/21</h6>
            <a href={post.url}>
              <h3 class='text-3xl'>{post.title}</h3>
            </a>
          </li>
        )}
      </ul>
    </section>
  </MainBody>
</html>
