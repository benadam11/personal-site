---
import Logo from "./Logo.astro";
---

<nav class="max-w-[1200px] mx-auto">
  <div class="flex justify-between px-8">
    <div class="align-center gap-8 hidden lg:flex mb-5">
      <a class="nav-link" href="/thoughts"> Thoughts </a>
      <a class="nav-link" href="/experiments"> Experiments </a>
      <a class="nav-link" href="/work"> Work </a>
    </div>

    <div class="self-end justify-end align-center gap-8 hidden lg:flex mb-5">
      <a
         class="nav-link cursor-alias"
        href="https://x.com/benadam11"
        target="_blank"
        rel="noreferrer"
        href="">Twitter</a
      >
      <a
        class="nav-link cursor-alias"
        href="https://github.com/benadam11"
        target="_blank"
        rel="noreferrer"
        >Github
      </a>
      <a
         class="nav-link cursor-alias"
        href="https://www.linkedin.com/in/benjaminadam/"
        target="_blank"
        rel="noreferrer"
        href="/work">LinkedIn</a
      >
    </div>
  </div>

  <Logo />
</nav>

<script>
  document.querySelectorAll<HTMLAnchorElement>(".nav-link").forEach((link) => {
    const { pathname } = window.location;
    const path = link.pathname;

    if (path === pathname || (path.length > 1 && pathname.includes(path))) {
      link.classList.add("active");
    }
  });
</script>

<style>
  .nav-link.active {
    font-weight: bold;
  }
</style>
